
<view class="page-todos">

  <view class="user">
    <image class="avatar" src="{{user.avatar || '../../assets/logo.png'}}" background-size="cover"></image>
    <view class="nickname">{{user.nickName && user.nickName + '\'s' || 'mp'}} Todo List</view>
    <view class="test">Todo List</view>
  </view>

  <view class="todo-items">

    <checkbox-group class="todo-items-group" bindchange="onTodoChanged">
      <label wx:for="{{todos}}" wx:for-item="item" class="todo-item {{item.completed ? 'checked' : ''}}" wx:key="*this">
        <checkbox class="todo-item-checkbox" value="{{item.text}}" checked="{{item.completed}}" />
        <text class="todo-item-text">{{item.text}}</text>
      </label>
    </checkbox-group>

  </view>

  <view class="todo-footer">
    <add-button text="Add Todo" bind:tap="clickCom"></add-button>
    <!-- <add-button bind:clickme="addTodo"></add-button> -->
  </view>

  <view bind:tap="clickParent">
    <view class="jyf" capture-catch:tap="captureClickChild">capture child</view>
    <view bindtap="clickChild">child</view>
  </view>
</view>
