.warrant-page {
  height: 100%;
  background-color: #F0F2F5;
}

.warrent-group-box {
  background-color: #FFF;
}

.warrent-box-list {
  display: flex;
  flex-direction: row;
  align-items:center;
  padding: 26rpx 0;
  margin-left: 32rpx;
  border-bottom: 1px solid #DEDFE0;
}

.warrent-box-list:nth-last-of-type(1) {
  border-bottom: none;
}

.warrent-box-title {
  flex: none;
  position: relative;
  width: 192rpx;
  font-size: 32rpx;
  color: #666;
  line-height: 40rpx;
}

.warrent-date-box {
  flex:auto;
}

.warrent-box-content {
  flex:auto;
  display: flex;
  align-items: center;
  flex-direction: row;
  margin-left: 32rpx;
  margin-right: 24rpx;
  overflow: hidden;
}

.warrent-box-content-txt {
  flex: auto;
  font-size: 32rpx;
  color: #333;
  line-height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.btn {
  width: 100%;
  padding: 40rpx 32rpx 32rpx;
  box-sizing: border-box;
}
