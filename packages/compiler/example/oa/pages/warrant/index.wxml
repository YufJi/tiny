<view class="warrant-page">
  <view class="btn">
    <button class="btn-default large" bindtap="navWarrantTo" data-status="new">
      <icon class="iconfont icon-add"></icon>{{btnAddAccredit}}
    </button>
  </view>
  <view class="warrant-group" wx:if="{{warrantList.length}}">
    <view class="warrant-box" wx:for="{{warrantList}}" wx:key="warrant_box_{{item.id}}">
      <view class="border-bottom-1px">
        <view class="warrant-box-list">
          <view class="warrant-list">
            <view class="warrant-list-title">{{textAddAgent}}</view>
            <view class="warrant-list-txt">{{ item.agent.fullname }}</view>
          </view>
          <view class="warrant-list">
            <view class="warrant-list-title">{{textStartDate}}</view>
            <view class="warrant-list-txt">{{ item.beginDate }}</view>
          </view>
          <view class="warrant-list">
            <view class="warrant-list-title">{{textEndDate}}</view>
            <view class="warrant-list-txt">{{ item.endDate }}</view>
          </view>
        </view>
      </view>
      <view class="warrant-box-operate">
        <view class="warrant-box-status" wx:if="{{ item.status === 'do' }}">
          <icon class="iconfont icon-more_solid"></icon>
          <view class="warrant-box-status-txt">{{textNotStarted}}</view>
        </view>
        <view class="warrant-box-status" wx:if="{{ item.status === 'doing'}}">
          <icon class="iconfont icon-clock_shape"></icon>
          <view class="warrant-box-status-txt">{{textOngoing}}</view>
        </view>
        <view class="warrant-box-status" wx:if="{{ item.status === 'done'}}">
          <icon class="iconfont icon-subtract_shapeed"></icon>
          <view class="warrant-box-status-txt">{{textCompleted}}</view>
        </view>
        <view class="warrant-btn">
          <button class="btn-default" bindtap="navWarrantTo" data-status="update" data-id="{{item.id}}">{{btnUpdateAgent}}</button>
          <button class="btn-default" bindtap="navWarrantTo" data-status="close" data-id="{{item.id}}" wx:if="{{ item.status === 'do' || item.status === 'doing' }}">{{btnEndAgent}}</button>
          <button class="btn-default" bindtap="navWarrantTo" data-status="delete" data-id="{{item.id}}" wx:if="{{ item.status === 'done' }}">{{btnDelAgent}}</button>
        </view>
      </view>
    </view>
  </view>
  <view class="empty-box" wx:if="{{warrantList.length == 0 && warrantListStatus}}">
    <image class="image" src="/image/empty.png"></image>
    <text class="text">{{textAlertCounts}}</text>
  </view>
</view>