.detail-container {
  padding-bottom: 120rpx;
}

.detail-card {
  background: #fff;
  margin-bottom: 16rpx;
  font-size: 30rpx;
  line-height: 38rpx;
  color: #333;
  overflow-x: hidden;
}

.detail-card-hd {
  position: relative;
  padding: 32rpx 32rpx;
}
.detail-card-hd.detail-form-title{
  line-height: 40rpx;
  padding: 26rpx 32rpx;
  font-size: 32rpx;
  color:#000;
  font-family: "PingFangSC-Medium";
}

.detail-submitor{
  padding:32rpx 0;
}

.detail-card-text {
  font-size: 32rpx;
  line-height: 40rpx;
  color: #333;
}
.detail-card-text .title{
  font-family: "PingFangSC-Medium";
}
.detail-card-text-memberinfo{
  display: flex;
  align-items: center;
}

.detail-card-info {
  display: flex;
  justify-content: space-between;
}


.icon-memberinfo{
  padding-top: 5rpx;
  margin-left: 16rpx;
  margin-right: 36rpx;
}

.detail-card-text+.detail-card-info {
  margin-top: 16rpx;
}

.detail-card-status {
  font-size: 30rpx;
  color: #ff6f00;
}

.detail-card-handle {
  font-size: 30rpx;
  color: #006bff;
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}
.detail-card-handle .icon-right-arrow{
  /* margin-inline:-6px; */
  color: #006bff;
  font-size: 30rpx;
}
.detail-card-bd {
  padding: 0 0 0 32rpx;
  position: relative;
}
.detail-card-space {
  padding-bottom: calc(120rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.detail-list {
  padding:0 0rpx 24rpx 0;
}

.detail-list-title {
  font-size: 32rpx;
  color: #333;
  line-height: 40rpx;
  padding: 32rpx 32rpx 32rpx 0rpx;
}

.detail-list-relative {
  position:relative;
  padding-top: 24rpx;
}

.detail-list:last-of-type {
  border-bottom: none;
}

.detail-item {
  padding: 12rpx 32rpx 12rpx 0;
}



.detail-item-title,.detail-item-txt {
  line-height: 38rpx;
  text-align: left;
  font-size: 30rpx;

  margin-bottom: 8rpx;
}
.detail-item-title{
  color:#999
}

.detail-item-title.file {
  font-size: 32rpx;
  color: #333;
}

.detail-item-txt {
  margin-bottom: 0rpx;
}
.detail-item-txt-red {
  color: red;
}
.detail-list.detail-list-file{
  padding: 32rpx 0rpx;
}
.detail-list.detail-list-file .detail-item{
  padding:0 32rpx 0 0;
  margin-bottom: 16rpx;
}
.detail-list.detail-list-file .detail-item:last-child{
  margin-bottom: 0rpx;
}
.detail-item-image {
  color: #006bff;
  flex: auto;
  line-height: 38rpx;
  padding: 11rpx 0;

}

.detail-item-image+.detail-item-image {
  margin-top: 16rpx;
}

.price {
  color: #ff6f00;
  padding-left: 48rpx;
}

.toggle {
  position: absolute;
  right: 32rpx;
  top: 32rpx;
  color: #006bff;
  display: flex;
  align-items: center;

}

.toggle .iconfont {
  color: #006bff;
  font-size: 20rpx;
}

/* step */

.step-list {
  padding: 32rpx 32rpx 32rpx 88rpx;
}

.step-item {
  position: relative;
  padding-bottom: 56rpx;
  padding-left: 34rpx;
  font-size: 30rpx;
  color: #ccc;
  box-sizing: border-box;
  margin-top: -6rpx;
  line-height: 38rpx;
}

.step-item:last-of-type {
  padding-bottom: 0;
}

.step-item .icon-right {
  display: none;
  position: absolute;
  left: -7rpx;
  top: 0rpx;
  z-index: 4;
}

.step-item:before {
  position: absolute;
  content: '';
  top: 26rpx;
  bottom: 0;
  left: 0;
  width: 1rpx;
  background: #ebeced;
}

.step-item:after {
  position: absolute;
  content: '';
  left: -14rpx;
  top: 6rpx;
  z-index: 3;
  width: 20rpx;
  height: 20rpx;
  background: #999;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

.step-item .step-item-time {
  position: absolute;
  right: 32rpx;
  top: 0;
  font-size: 26rpx;
}

.step-item.done {
  color: #999;
}

.step-item.active .step-item-title {
  margin-bottom: 8rpx;
  color: #333;
}

.step-item.active .step-item-title .status {
  padding-left: 19rpx;
  color: #ff6f00;
}

.step-item.active .step-item-info {
  color: #666;
}
.step-item-info{
  line-height: 40rpx;
}
.item-userinfo{
  margin-bottom:16rpx;
}

.step-item.active .icon-right {
  display: block;
}

.step-item.active:after {
  background: #ff6f00;
  border-color: #ff6f00;
}

.step-item.active .time {
  display: block;
  color: #999;
}

.step-item:last-child:before {
  display: none;
}



/* fixed bottom */
.fixed-bottom {
  position: fixed;
  z-index: 99;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  box-shadow: 0 -2px 10px 0 rgba(0, 0, 0, 0.05);
}

/* 行内btn */

.btn-area.inline {
  margin-top: 0;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.btn-area.inline button {
  display: inline-block;
}

.btn-area.inline button+button {
  margin-left: 19rpx;
}

.btn-area button.btn-primary {
  background: #1466de;
  color: #fff;
}

/* 中间弹出框 */

.toast-box {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  width: 562rpx;
  height: 552rpx;
  box-sizing: border-box;
  margin: auto;
}

.mask {
  position: fixed;
  display: flex;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  touch-action: none;
}

.toast-box-hd {
  position: relative;
  font-size: 34rpx;
  color: #333;
  text-align: center;
  line-height: 42rpx;
  margin-bottom: 24rpx;
}

.toast-box-hd .icon-close {
  position: absolute;
  left: 24rpx;
  top: 0;
}

.toast-box-bd {
  margin-bottom: 40rpx;
}

.textarea {
  width: 100%;
  text-align: left;
  border: 1px solid #ccc;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
  height: 286rpx;
}

.textarea-placeholder {
  font-size: 28rpx;
  color: #ccc;
  line-height: 36rpx;
}

.toast-box-ft {
  display: flex;
  justify-content: space-around;
}

.toast-box-ft .btn-default, .toast-box-ft .btn-primary {
  width: 220rpx !important;
}

/* 底部弹出框 */

.toast-box.bottom-modal {
  bottom: 0;
  position: absolute;
  width: 100%;
  height: auto;
  border-radius: 16rpx 16rpx 0 0;
  padding: 40rpx 0;
}

.finiStatus {
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  top: 0rpx;
  right: 32rpx;
  border-radius: 100%;
  transform: rotate(-15deg);
  overflow: hidden;
}

.finiStatus .finiStatus-img {
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.m-10{
  margin-right:20rpx;
  margin-left:20rpx;
}


/* 英文样式 */
.en .detail-item-title{
  font-size: 26rpx;
  width:200rpx;
}
.en .detail-item-txt{
  font-size: 26rpx;
}


