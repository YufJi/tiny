<view class="cweui-search-bar {{extClass}}">
    <view class="cweui-search-bar__form">
        <view class="cweui-search-bar__box">
            <icon class="cweui-icon-search_in-box" type="search"></icon>
            <input  type="text" class="cweui-search-bar__input" placeholder="{{placeholder}}" value="{{value}}" focus="{{focus}}" bindblur="inputBlur" bindfocus="inputFocus" bindinput="inputChange" />
            <view class="cweui-icon-clear" wx:if="{{value.length > 0}}" bindtap="clearInput">
                <icon type="clear" size="12"></icon>
            </view>
        </view>
        <label class="cweui-search-bar__label" wx:if="{{!searchState}}" bindtap="showInput">
            <icon class="cweui-icon-search" type="search" size="20"></icon>
            <view class="cweui-search-bar__text">{{btnSearch}}</view>
        </label>
    </view>
    <view wx:if="{{cancel && searchState}}" class="cweui-search-bar__cancel-btn" bindtap="hideInput">{{cancelText}}</view>
</view>


<!-- 列表数据显示 -->
<view class="searchbar-result" wx:if="{{searchState && result.length > 0 && showCell == true }}">
<view class="border-bottom-1px"  data-index="{{index}}" wx:for="{{result}}" bindtap="selectResult">
  <view class="searchItem" >
      <view class="view-text">{{item.text}}</view>
      <view class="des">{{item.org}}</view>
  </view>
  </view>
</view>

