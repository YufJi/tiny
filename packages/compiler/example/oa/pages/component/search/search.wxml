<view class="oa-page search-page">
  <view class="page__bd">
    <view class="search-box">
      <view class="search-item {{ inputStatus ? 'focus' : '' }}">
        <view class="search-view" wx:if="{{!inputStatus}}">
          <icon class="iconfont icon-search"></icon>
          <text class="placeholder-txt">{{textSearchPlace}}</text>
        </view>
        <icon class="iconfont icon-search" wx:if="{{inputStatus}}"></icon>
        <input class="search-bar" type="text" bindinput="inputFun" value="{{inputVal}}" placeholder="{{textSearchPlace}}" focus="{{inputStatus}}" bindfocus="focusFun" />
        <icon class="iconfont icon-closed_shapeed" bindtap="clearValue" wx:if="{{inputVal}}"></icon>
      </view>
      <view class="search-btn" bindtap="cancelFun" wx:if="{{false}}">{{btnCancel}}</view>
    </view>
    <view class="associate-box" wx:if="{{associateData.length}}">
      <view class="border-bottom-1px"  wx:for="{{associateData}}" wx:key="associate_box_{{item.uid}}" bindtap="selectResult" data-text="{{item.text}}" data-uid="{{item.uid}}">
        <view class="associate-item">
          <view class="associate-name">{{item.text}}</view>
          <view class="associate-des">{{item.org}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="history-group">
    <view class="history-group-title">
      <view class="history-group-title-txt">{{historyHeadTxt}}</view>
      <icon class="iconfont icon-del" bindtap="clearHistory" wx:if="{{historys.length}}"></icon>
    </view>
    <view class="history-group-con">
      <view class="history-list" wx:for="{{historys}}" wx:key="history_list_{{index}}" bindtap="changeValue" wx:if="{{historys.length}}" data-value="{{item}}">{{item}}</view>
    </view>
  </view>
</view>