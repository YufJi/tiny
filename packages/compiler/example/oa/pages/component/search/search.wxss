@import "../../../app.wxss";

.oa-page {
  position: relative;
  height: 100%;
}

.page__bd {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

.search-box {
  flex: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}

.search-box .icon-search{
  margin-right: 8px;
}

.search-item {
  flex: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 0 6rpx 0 12rpx;
  margin: 0 24rpx;
}

.placeholder-txt {
  font-size: 30rpx;
  color: #CCC;
  line-height: 38rpx;
}

.search-bar {
    height: 64rpx;
}

.search-item.focus .search-bar {
  flex: auto;
  width: 100%;
  margin: 0 6rpx;
}

.search-item.focus {
  /* margin-right: 0; */
}

.search-btn {
  flex: none;
  font-size: 30rpx;
  line-height: 38rpx;
  color:#666;
  margin-right: 10rpx;
  padding: 13rpx 14rpx 13rpx 24rpx;
}

.icon-closed_shapeed {
  padding: 0 10rpx 0 16rpx;
}

.associate-box {
  position: relative;
  flex: auto;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  background-color: #fff;
  margin-top: 20rpx;
  z-index: 2;
}

.associate-item {
  flex: none;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding: 32rpx 32rpx 32rpx 0;
  margin-left: 32rpx;
  /* border-bottom: 1rpx solid #DEDFE0; */
}

.associate-item:last-child{
  border-bottom: none
}

.border-bottom-1px{
  padding-bottom: 1px;
  background-position: center bottom;
  background-image: linear-gradient(to bottom, transparent 50%, #DEDFE0 50%);
  background-repeat: no-repeat;
  background-size:  100% 1px;
}
.border-bottom-1px:last-child{
  /* border-bottom: none
   */
   padding-bottom: 0px;
   background: none;
}




.associate-name {
  font-size: 32rpx;
  color: #333;
  line-height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.associate-des {
  font-size: 28rpx;
  color: #999;
  line-height: 36rpx;
  margin-top: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.history-group {
  position: absolute;
  top: 120rpx;
  left: 0;
  right: 0;
  z-index: 1;
  display: flex;
  flex-direction: column;
  flex: auto;
}

.history-group-title {
  flex: none;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx 14rpx;
}

.history-group-title-txt {
  flex: none;
  font-size: 30rpx;
  color: "#333";
  line-height: 38rpx;
}

.icon-del {
  flex: none;
  padding: 0 20rpx;
}

.history-group-con {
  flex: auto;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  padding: 14rpx 32rpx;
}

.history-list {
  flex: none;
  font-size: 26rpx;
  color: "#666";
  line-height: 34rpx;
  padding: 13rpx 28rpx;
  border-radius: 38rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.history-list:nth-of-type(1) {
  margin-left: 0;
}

.search-item {
  position: relative;
}

.search-view {
  position: absolute;
  top: 0;
  left: 0;
  height: 64rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  z-index: 2;
  border-radius: 12rpx;
  background-color: #fff;
  pointer-events: none;
}