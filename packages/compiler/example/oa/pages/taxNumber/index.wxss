.tax-number-page {
  width: 100%;
  height:100%;
}

.tax-number-page .tax-number-content .tax-number-search {
  width: 100%;
  height: 100rpx;
  /* padding: 16rpx 24rpx; */
  box-sizing: border-box;
}



.tax-number-search .tax-number-input {
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  border: 1px solid #ecedf0;
  border-radius: 8rpx;
  box-sizing: border-box;
  background: #fff; 
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#CCCCCC;
}
.tax-number-search  .tax-search{
  color: #CCCCCC;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 16rpx;
}




.tax-info{
  background: #fff;
  width: 100%;
  padding: 64rpx 0;
  box-sizing: border-box;
}

.tax-info .tax-title{
  width: 500rpx;
  height: 41rpx;
  line-height: 41rpx;
  font-size: 32rpx;
  color:#333;
  text-align: center;
  margin:0 auto 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.line{
  width: 126rpx;
  padding-bottom: 1px;
  background-position: center bottom;
  background-image: linear-gradient(to bottom, transparent 50%, #DEDFE0 50%);
  background-repeat: no-repeat;
  background-size:  100% 1px;
  box-sizing: border-box;
  display: block;
}

.my-content{
  width: 100%;
}
.my-tax-item{
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 36rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
}
.my-tax-item-top {
  margin-top:0px;
}
.item-label{
  width: 177rpx;
  text-align: right;
  color: #666;
}
.item-text{
  display: flex;
  flex:1;
  line-height: 36rpx;
  padding-left: 33rpx;
  box-sizing: border-box;
  color:#000;
}

.no-result{
  width: 100%;
  height: 317rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ccc;
}

.icon-cchat-copy{
  margin-inline-start: 8rpx;
  color:#1466de;
}