  <!-- tab切换 -->
  <view class="swiper-tab">
      <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="getProcessorsData" ><text class="swiper-tab-txt" data-current="0">{{tabNameApproval}}</text></view>
      <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1"  bindtap="getProcessedData"><text class="swiper-tab-txt" data-current="1">{{tabNameApproved}}</text></view>
  </view>

  <view class="search-group">
    <view class="search-box nomargin">
      <view class="search-item {{ inputStatus ? 'focus' : '' }}">
      <view class="search-view" wx:if="{{!inputStatus}}">
        <icon class="iconfont icon-search"></icon>
        <text class="placeholder-txt">{{searchDetail}}</text>
      </view>
        <icon class="iconfont icon-search" wx:if="{{inputStatus}}"></icon>
        <input class="search-bar" type="text" bindinput="inputFun" placeholder="{{searchDetail}}" value="{{inputVal}}" confirm-type="{{searchDetail}}" bindconfirm="search"  focus="{{inputStatus}}" bindfocus="focusFun" />
        <icon class="iconfont icon-closed_shapeed" bindtap="clearValue" wx:if="{{inputStatus}}"></icon>      
      </view>
      <view class="search-btn" bindtap="search" wx:if="{{inputStatus}}">{{btnValue}}</view>
    </view>
    <view class="sort-box {{sortStatus ? 'active' : '' }} {{mode ? 'new' : '' }}" bindtap="sortStatusFun" wx:if="{{!inputStatus}}">
      <icon class="iconfont icon-ranke"></icon>
      <view class="sort-box-title">{{searchSort}}</view>
    </view>
    <view class="sort-group" wx:if="{{sortStatus}}">
      <view class="sort-item {{sortId === item.id ? 'active' : '' }}" wx:for="{{sortData}}" bindtap="changeSort" data-id="{{item.id}}" data-key="{{item.key}}" wx:key="sort_group_item_{{item.id}}">
        <view class="sort-item-txt">{{item.name}}</view>
        <icon class="iconfont icon-check"></icon>
      </view>
    </view>
  </view>

  <view class="swiper-panel" current="{{currentTab}}">
      <view class="swiper-panel-item"> 
         <!-- 待审批 -->
          <view class="form-list" wx:if="{{currentTab == 0}}">
          <view class="border-bottom-1px" wx:for="{{processorsData}}" wx:key="index" >
            <view class="form-card" wx:if="{{processorsData.length > 0}}" bindtap="goDetail" data-id="{{item.APP_ID}}" data-formid="{{item.APP_FormType}}" data-title="{{item.APP_Subject}}" data-app-type="{{item.APP_Type}}" data-app-sub-type="{{item.APP_SubType}}">
                <view class="form-card-title">{{item.APP_SubmitUser}}-{{item.APP_Subject}}</view>
                <view class="form-card-text">{{textOANumber}}:{{item.APP_ID}}</view>
                <view class="form-card-text">{{textOADate}}:{{item.APP_CreateDT}}</view>
                <view class="form-card-status"><text class="wait">{{item.APP_Status}}</text></view>
            </view>
            </view>
            <view class="empty-box" wx:if="{{processorsData.length == 0 && processorsDataStatus}}">
              <image class="image" src="/image/empty.png"></image>
              <text class="text">{{extPromp}}</text>
            </view>
          </view>
      </view>
      <view class="swiper-panel-item"> 
        <!-- 已审批 -->
        <view class="form-list" wx:if="{{currentTab == 1}}">
        <view class="border-bottom-1px" wx:for="{{processedData}}" wx:key="index">
            <view class="form-card" wx:if="{{processedData.length > 0}}"  bindtap="goDetail" data-id="{{item.APP_ID}}" data-formid="{{item.APP_FormType}}" data-title="{{item.APP_Subject}}" data-app-type="{{item.APP_Type}}" data-app-sub-type="{{item.APP_SubType}}">
                <view class="form-card-title">{{item.APP_SubmitUser}}-{{item.APP_Subject}}</view>
                <view class="form-card-text">{{textOANumber}}:{{item.APP_ID}}</view>
                <view class="form-card-text">{{textOADate}}:{{item.APP_CreateDT}}</view>
                <view class="form-card-status"><text class="wait">{{item.APP_Status}}</text></view>
            </view>
             </view>
            <view class="empty-box" wx:if="{{processedData.length == 0 && processedDataStatus}}">
              <image class="image" src="/image/empty.png"></image>
              <text class="text">{{extPromp}}</text>
            </view>
          </view>
      </view>
  </view>

  <view class="mask" wx:if="{{sortStatus}}" bindtap="closeSortStatus"></view>





