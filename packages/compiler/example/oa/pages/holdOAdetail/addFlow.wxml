<view class="addFlow-card">
  <view class="addFlow-card-hd">添加会签人</view>
  <view class="addFlow-card-bd">
    <view class="list">
      <view class="item" wx:for="{{flowData}}" wx:key="addFlow_card_item_{{item.id}}">
        <view class="avator">
          <image class="avator-img" src="{{item.avatar}}"></image>
        </view>
        <view class="fullname">{{item.name}}</view>
        <view class="close" bindtap="deleteInfo" data-id="{{item.id}}"><icon class="iconfont icon-closed_shapeed"></icon></view>
      </view>
      <view class="item">
        <view class="avator" bindtap="openSearch"><icon class="iconfont icon-add_line"></icon></view>
      </view>
    </view>
  </view>
</view>

<!-- 添加会签人原因 -->
<view class="addFlow-card">
  <view class="addFlow-card-hd">添加会签人原因</view>
  <view class="addFlow-card-bd">
    <textarea placeholder="选填" class="textarea" value="{{value}}" placeholder-class="textarea-placeholder" bindinput="inputFun"></textarea>
  </view>
</view>

<view class="btn">
  <button class="btn-primary large" bindtap="submitAddFlow">确定</button>
</view>