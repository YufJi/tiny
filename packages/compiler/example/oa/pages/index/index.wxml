<!--index.wxml-->
<view wx:if="{{env != 'prod'}}" class="envWarn" bindtap="switchToProd">当前环境： {{env}}</view>
<view class="container">
  <view class="box box-first">
    <block wx:for="{{firstEntry}}" wx:key="box_entry1_item_{{item.id}}">
      <view class="box-item" bindtap="navRouterTo" data-url='{{ item.url }}'>
          <image src="../../image/icon-{{item.id}}.png" class="box-item-icon"></image>
          <text>{{item.name}}</text>
      </view>
    </block>
  </view>

  <view class="box box-second">
    <block wx:for="{{secondEntry}}" wx:key="box_entry2_item_{{item.id}}">
        <view class="box-item" bindtap="navRouterTo" data-url='{{ item.url }}' data-key='{{ item.key }}'>
            <image src="../../image/icon-{{item.id}}.png" wx:if="{{ item.id }}" class="box-item-icon"></image>
            <image src="" wx:else class="box-item-icon"></image>
            <text>{{item.name}}</text>
        </view>
    </block>
  </view>

</view>