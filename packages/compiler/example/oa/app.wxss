page,body {
  background-color: #F0F2F5;
  height: 100%;
  font-size: 28rpx;
  line-height: 1.6;
  /* border-top:1rpx solid #ddd; */
}

checkbox, radio{
  margin-right: 10rpx;
}

form{
  width: 100%;
}
input {
  cursor: auto;
  display: block;
  height: 1.4rem;
  text-overflow: clip;
  overflow: hidden;
  white-space: nowrap;
  font-family: UICTFontTextStyleBody;
  min-height: 1.4rem;
  width: 100%;
  margin: 0;
}

textarea {
  cursor: auto;
  display: block;
  position: relative;
  margin: 0;
  resize: none;
  outline: 0; 
  border:  0 none;
  outline-style: none;
}

image,img{
  border:0 none;
}

button{
  border: none;
  margin: 0;
  padding: 0;
  -webkit-tap-highlight-color: transparent;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  font-size: 12px;
}

