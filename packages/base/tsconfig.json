{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "baseUrl": ".",
    "noEmit": true,
    "module": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"],
      "shared": ["src/shared/index"],
      "js-bridge": ["src/js-bridge/index"]
    }
  },
  "include": [
    "./src"
  ]
}